#########
# i3bar #
#########
bar {
    status_command i3status --config ~/.config/i3/i3status.conf
    
    # Disable all tray icons
    tray_output none

    # tray_output primary
    colors {
        background $trueblack
        statusline $white2
        separator $white2

        # border background text
        focused_workspace 	$white2 $white1 $trueblack
        active_workspace 	$trueblack $black2 $white2
        inactive_workspace 	$trueblack $trueblack $white2
        urgent_workspace 	$red1 $red1 $white2
        binding_mode 		$background $red2 $white2
    }
}

